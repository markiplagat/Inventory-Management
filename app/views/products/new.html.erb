<%= form_with model: @product, local: true, class: "max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md" do |form| %>
  <h2 class="text-2xl font-bold mb-4 text-gray-700">Add New Product</h2>

  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-700 font-bold mb-2" %>
    <%= form.text_field :name, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block text-gray-700 font-bold mb-2" %>
    <%= form.text_area :description, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :price, class: "block text-gray-700 font-bold mb-2" %>
    <%= form.number_field :price, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :quantity, class: "block text-gray-700 font-bold mb-2" %>
    <%= form.number_field :quantity, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="flex justify-between">
    <%= link_to "Back", products_path, class: "bg-blue-500 font-bold py-2 px-4 rounded-lg shadow-md hover:bg-red-700 cursor-pointer" %>
    <%= form.submit "Create Product", class: "bg-yellow-500 font-bold py-2 px-4 rounded-lg shadow-md hover:bg-blue-700 cursor-pointer" %>

  </div>
<% end %>
