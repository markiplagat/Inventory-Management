<h1><%= @product.name %></h1>
<p><strong>Description:</strong> <%= @product.description %></p>
<p><strong>Price:</strong> <%= number_to_currency(@product.price) %></p>
<p><strong>Quantity:</strong> <%= @product.quantity %></p>

<div class="mt-4">
  <%= link_to 'Edit', edit_product_path(@product), class: 'bg-yellow-500 py-1 px-3 rounded hover:bg-yellow-700 transition'%>
  <%= link_to 'Back to Products', products_path, class: 'bg-blue-500 py-1 px-3 rounded hover:bg-blue-700 transition' %>
</div>
