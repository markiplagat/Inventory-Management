<h1 class="text-2xl font-bold mb-4">Edit Product</h1>

<%= form_with model: @product, local: true, class: "max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md" do |form| %>
  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-700 font-bold mb-2" %>
    <%= form.text_field :name, class: "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block text-gray-700 font-bold mb-2" %>
    <%= form.text_area :description, class: "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :price, class: "block text-gray-700 font-bold mb-2" %>
    <%= form.number_field :price, class: "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :quantity, class: "block text-gray-700 font-bold mb-2" %>
    <%= form.number_field :quantity, class: "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="flex justify-between items-center">
    <%= form.submit "Update Product", class: "bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition" %>
    <%= link_to "Cancel", products_path, class: "text-gray-500 hover:underline" %>
  </div>
<% end %>
